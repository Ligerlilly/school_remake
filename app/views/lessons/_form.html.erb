<%= form_for @lesson do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', cols: 20, rows: 20 %>
  </div>
  <div class='form-group'>
    <%= f.label :section %>
     <%= f.collection_select(:section_id, Section.all, :id, :name ) %>
  </div>
  <%= f.submit %>
<% end %>
