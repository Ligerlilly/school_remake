<h3><%= @lesson.title %></h3>

<p><%= @lesson.content %></p>
<% if current_user %>
  <%= link_to 'Edit', edit_lesson_path(@lesson) %> |
  <%= link_to 'Delete', lesson_path(@lesson), :data => {confirm: 'Are you sure?', method: 'delete'} if current_user %> |
<% end %>
<%= link_to 'Previous Lesson', lesson_path(@lesson.previous) %> |
<%= link_to 'Next Lesson', lesson_path(@lesson.next) %> |
<%= link_to 'Home', chapter_path(1) %>
